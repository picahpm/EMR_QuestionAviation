                                    <table id="tblBookPage" cellpadding="10px">
                       
                                    </table>
                                </asp:Panel>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <input id="current_tpr_id" name="current_tpr_id" type="hidden" />

            <div id="dialog" title="Please Insert Reason for Reject." style="display:none; ">
